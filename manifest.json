{
    "manifest_version": 3,
    "name": "UniversalBookmarker",
    "version": "1.0",
    "description": "Sync your bookmarks across all chromium supported browsers",
    "permissions": ["storage","tabs"],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content-script.js"],
        "css": ["styles.css"]
      }
    ],
    "icons": {
      "16": "",
      "48": "",
      "128":""
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "",
        "48": "",
        "128": ""
      }
    }
  }
  